<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/mainbackground"
    tools:context=".Fragments.HadethFragment">

    <TextView
        android:id="@+id/tv_hadeth"
        style="@style/text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="اسلامي"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="12dp"
        />
    <ImageView
        android:id="@+id/header_img"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:src="@drawable/hadeth_logo"
        app:layout_constraintTop_toBottomOf="@id/tv_hadeth"
        app:layout_constraintStart_toStartOf="@id/tv_hadeth"
        app:layout_constraintEnd_toEndOf="@id/tv_hadeth"
        />
    <TextView
        android:id="@+id/tv_hadeth_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/header_img"
        app:layout_constraintStart_toStartOf="@id/header_img"
        app:layout_constraintEnd_toEndOf="@id/header_img"
        app:layout_constraintBottom_toTopOf="@id/hadeth_recycler_view"
        android:text="الاحاديث"
        android:textStyle="normal"
        android:textSize="24sp"
        style="@style/text_style"
        />
    <View
        android:id="@+id/top_border"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/header_img"
        android:background="@color/Gold"
        android:layout_marginHorizontal="8dp"
        />
    <View
        android:id="@+id/bottom_border"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/tv_hadeth_name"
        android:background="@color/Gold"
        android:layout_marginHorizontal="8dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hadeth_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_border"
        />

</androidx.constraintlayout.widget.ConstraintLayout>